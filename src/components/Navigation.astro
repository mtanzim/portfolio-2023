---
const pages = [
  {
    href: "/",
    label: "Home",
  },
  {
    href: "/work",
    label: "Work",
  },
  {
    href: "/play",
    label: "Play",
  },
  {
    href: "/chat",
    label: "Chat",
  },
  {
    href: "/blog",
    label: "Blog",
  },
];
---

<div class="flex flex-wrap navbar bg-base-100 mb-8">
  <div class="flex-1">
    <a href="/" class="btn btn-ghost normal-case text-xl">
      <img src="/favicon-32x32.png" alt="logo" />
      <p class="mx-2">Tanzim Mokammel</p>
    </a>
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal px-1">
      {
        pages.map((p) => (
          <li>
            <a href={p.href}>{p.label}</a>
          </li>
        ))
      }
    </ul>
    <button
      class="btn btn-accent btn-outline btn-xs mx-4"
      data-toggle-theme="dracula,light"
      data-act-class="ACTIVECLASS"
    >
      day n' night
    </button>
  </div>
</div>
