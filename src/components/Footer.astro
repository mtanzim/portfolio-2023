<footer class="footer mt-36 items-center p-2 fixed bottom-0 bg-accent">
  <div class="items-center grid-flow-col">
    <a class="mx-2" href="mailto:mtanzim@gmail.com">
      <img class="w-6 h-6" src="/icons/mail.svg" />
    </a>
    <a
      class="mx-2"
      href="https://www.linkedin.com/in/tanzim-mokammel/"
      target="_blank"
    >
      <img class="w-6 h-6" src="/icons/linkedin.svg" />
    </a>
    <a class="mx-2" href="https://github.com/mtanzim" target="_blank">
      <img class="w-6 h-6" src="/icons/github.svg" />
    </a>

    <button class="goTop md:hidden"
      ><img class="w-6 h-6" src="/icons/up.svg" /></button
    >
  </div>

  <div
    class="grid-flow-col gap-4 hidden md:place-self-center md:justify-self-end md:block"
  >
    <button class="goTop"><img class="w-6 h-6" src="/icons/up.svg" /></button>
  </div>
</footer>

<script>
  const setupGoTop = () => {
    const buttons = document.querySelectorAll(".goTop");
    buttons.forEach((b) =>
      b.addEventListener("click", () =>
        window.scrollTo({ top: 0, behavior: "smooth" }),
      ),
    );
  };
  setupGoTop();
  document.addEventListener("astro:after-swap", setupGoTop);
</script>
