---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome">
  <div class="hero bg-base py-12">
    <div class="hero-content flex-col lg:flex-row">
      <img src="/tanzim.jpg" class="max-w-lg rounded-lg shadow-2xl" />
      <div class="divider lg:divider-horizontal"></div>
      <div>
        <h1 class="text-5xl font-bold">Hi, I'm Tanzim!</h1>
        <p class="py-6">
          I'm a curious and passionate software engineer. This page is a
          demonstration of my work and play.
        </p>
      </div>
    </div>
  </div>
  <h1 class="text-4xl font-bold my-12">I'm currently contributing to</h1>
  <div class="flex mb-4">
    <div class="card w-96 bg-base-100 shadow-xl m-4">
      <a target="_blank" href="https://flipp.com/home/">
        <figure>
          <img class="object-cover h-96 w-96" src="/flipp.png" alt="flipp" />
        </figure>
      </a>
      <div>
        <div class="card-body">
          <h2 class="card-title">Senior software engineer</h2>
          <p>Helping North Americans shop smarter</p>
        </div>
      </div>
    </div>
    <div class="card w-96 bg-base-100 shadow-xl m-4">
      <a target="_blank" href="https://careerfoundry.com/">
        <figure>
          <img class="object-cover h-96 w-96" src="/cf.jpg" alt="cf" />
        </figure>
      </a>
      <div>
        <div class="card-body">
          <h2 class="card-title">Web development mentor</h2>
          <p>Mentoring the next generation of web developers</p>
        </div>
      </div>
    </div>
  </div>
</Layout>
