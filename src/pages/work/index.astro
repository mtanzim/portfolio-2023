---
import Layout from "../../layouts/Layout.astro";
import CodingWrapped from "../../components/CodingStats/CodingWrapped.astro";

type TileType = "current" | "past" | "study" | "side" | "background";
interface Tile {
  company: string;
  title: string;
  desc: string;
  links: string[];
  linkTitles: string[];
  imageSrc: string;
  type: TileType;
