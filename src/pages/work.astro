    link: "https://open.spotify.com/episode/5u3gXFNGomUkKimQHE9sgG?si=Op9ZjqG-RcuyWr9Uek2TvA",
    type: "misc",
  },
];
---

<Layout title="Work">
  {
    Object.keys(tileHeaders).map((tileType) => (
      <>
        <h1 class="text-4xl font-bold my-12">
          {tileHeaders[tileType as TileType]}
        </h1>
        <div class="flex mb-4">
          {tiles
            .filter((t) => t.type === tileType)
            .map((tile) => (
              <div class="card w-64 bg-base-100 shadow-xl m-4">
                <a target="_blank" href={tile.link}>
                  <figure>
                    <img
                      class="object-cover h-36 w-36"
                      src={tile.imageSrc}
                      alt={tile.company}
                    />
                  </figure>
                  <div>
                    <div class="card-body">
                      <h2 class="card-title">{tile.title}</h2>
                      <p>{tile.desc}</p>
                    </div>
                  </div>
                </a>
              </div>
            ))}
        </div>
      </>
    ))
  }
  <div class="mb-4">
    <h1 class="text-4xl font-bold my-12">
      I've recently been reading and writing in
    </h1>
    <div class="artboard artboard-horizontal phone-1">
      <CodingWrapped />
    </div>
  </div>
</Layout>
